<% /* adapted from [5/10/2021]: https://www.youtube.com/watch?v=6FOq4cUdH8k&ab_channel=TraversyMedia, https://getbootstrap.com/docs/4.0/components/alerts/ */ %>
<% if(typeof errors != "undefined") { %>
  <% errors.forEach(function(error) { %>
<div class="alert alert-warning" role="alert">
 <%= error.msg %>
</div>
  <% }); %>
<% } %>

<% if(success_msg != "") { %>
<div class="alert alert-success" role="alert">
 <%= success_msg %>
</div>
<% } %>

<% if(error_msg != "") { %>
<div class="alert alert-warning" role="alert">
 <%= error_msg %>
</div>
<% } %>

<% if(error != "") { %>
<div class="alert alert-warning" role="alert">
 <%= error %>
</div>
<% } %>