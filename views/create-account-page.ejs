<html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>Create Account</title>
        <link rel="stylesheet" href="/css/qcfirst-style.css">
        <link rel="stylesheet" href="/css/style-qc.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <script src = "/js/jquery-3.6.0.js"></script>

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

        <!-- Bootstrap JavaScript -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

        <!-- font-awesome -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>

    <!-- adapted from [3/30/2021] https://www.youtube.com/watch?v=IvQAfNWnSYc&ab_channel=OnlineTutorials -->
    <header id="header">
      <%- include ("./partials/header"); %>
    </header>
    <!-- end adaptation -->

    <div class="flexbox">
    <!-- heading in middle of page -->
        <h1 class="heading">Please enter your new account details!</h1>

        <!-- display error messages -->
        <%- include ("./partials/messages"); %>
        <!-- Create Account Details -->
        <form id="create-account-details" action="/users/register" method="POST">
            <fieldset>
                <div class="vertical-container" id="input-background">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" placeholder="First Name" required="true" value="<%= typeof firstName != 'undefined' ? firstName : '' %>">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Last Name" required="true" value="<%= typeof lastName != 'undefined' ? lastName : '' %>">
                    <label for="username">Username</label>
                    <input type="email" id="username" name="username" placeholder="Username" required="true" value="<%= typeof username != 'undefined' ? username : '' %>">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Password" required="true" value="<%= typeof password != 'undefined' ? password : '' %>">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required="true" value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>">
                    <select name="usertype" id="usertype">
                        <option value="Student">Student</option>
                        <option value="Instructor">Instructor</option>
                    </select>
                    <button type="submit" id="create" name="create">Register</button>
                    <div class="error">
                        <div id="name-error"></div>
                        <div id="username-error"></div>
                        <div id="password-error"></div>
                        <div id="confirm-password-error"></div>
                    </div>
                    </div>
            </fieldset>
        </form>
    <!-- Log in -->
    <a href="login" class="log-in">Already have an account?</a>
    </div>

    <!--footer-->
    <!--adapted from [3/31/2021]: https://www.youtube.com/watch?v=KUHrMzN7ey8&ab_channel=MarcHinton -->
    <footer id="footer">
      <%- include ("./partials/footer"); %>
    </footer>
    <!-- end adaptation -->

    </body>

</html>